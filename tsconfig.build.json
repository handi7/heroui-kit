{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",

    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "lib": ["ES2021", "DOM", "DOM.Iterable"],

    "jsx": "react-jsx",

    "types": ["react", "react-dom"],

    "skipLibCheck": true,
    "verbatimModuleSyntax": false
  },
  "include": ["src"]
}
